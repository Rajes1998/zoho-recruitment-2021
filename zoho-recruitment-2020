#include<stdio.h>
#include<conio.h>
void main(){
    char a[50];
    int len,count;
    printf("Enter the string:\n");
    gets(a);
    len = strlen(a);
    count = len/2; 

    for(int i=0;i<len;i++){
        if(i==count+1){
            count=0;
        }
        for(int j=0;j<strlen(a);j++){
            if(i+j>=len-1){
                printf("%c",a[count]);
                count++;
                
            }
            else{
            printf(" ");
        }
        }
        printf("\n");
    }
}
